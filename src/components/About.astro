<script>
  import anime from "animejs";

  anime.set('[data-animBio="block"]', { opacity: 0, translateY: "-10%" });
  anime.set('[data-animBio="text"]', { opacity: 0, translateY: "-2rem" });

  anime({
    targets: '[data-animBio="block"]',
    translateY: 0,
    opacity: 1,
    easing: "spring()",
  });

  anime({
    targets: '[data-animBio="text"]',
    translateY: 0,
    opacity: { value: 1, easing: "linear", duration: 150 },
    easing: "spring(1, 75, 10, 15)",
    delay: anime.stagger(100),
  });
</script>
