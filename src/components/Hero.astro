---
import clsx from "clsx";
import About from "./About.astro";
import Background from "./Background.astro";
import LinkToDemo from "./LinkToDemo.astro";

const sectionClass = clsx(
  "mx-auto max-w-screen-2xl px-6 pt-28 relative overflow-hidden",
  "flex flex-col justify-between",
  "bg-white",
  "sm:px-12 sm:pt-48",
  "lg:min-h-screen lg:max-h-[52rem]"
);

const demoLinkClass = clsx(
  "h-full pt-[30%] pb-4",
  "flex items-center justify-center",
  'sm:pt-[10%] sm:pb-6"'
);
---

<section class={sectionClass}>
  <div class="flex flex-col gap-[5%] justify-between md:flex-row">
    <div class="h-max mb-28 w-fit relative md:mb-0">
      <h1 class="flex flex-col z-10 pointer-events-none relative">
        <span class="font-extrabold text-4.5xl lg:text-5xl"
          >Hello, I&apos;m ðŸ‘‹
        </span>
        <span class="font-extrabold text-4.5xl lg:text-5xl"
